extends root

block content
    h1 #{student.firstName} #{student.lastName}



    ul
        each key in Object.keys(student)
            li #{key}

    h6 Touchpoints: #{touchpoints.length}
    ul
        each key in Object.keys(touchpoints[0])
            li #{key}

    h6 Commits: #{commits.length}
    ul
        each key in Object.keys(commits[0])
            li #{key}

    button.btn.btn-primary#edit-student(href data-student-id=student.id) Edit Student

    include modals/editStudentModal.pug
    script(src = "/public/scripts/student.js")